# MySQL connection
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=yourpassword
MYSQL_DATABASE=inventos
# Optional: protect the seed endpoint
SEED_SECRET=change-me

# Optional: secret to encrypt persisted server config (required to save DB config)
APP_CONFIG_SECRET=please-change-this-long-random-string

# Auth config
# Used to sign the auth cookie (HMAC). REQUIRED in production.
AUTH_SECRET=please-change-this-long-random-string-too
# Enable dev-only password hash API in production (DO NOT set in prod normally)
# AUTH_HASH_DEV=1

# Vercel Blob Storage (for logo uploads)
# Get your token from: https://vercel.com/dashboard/stores
# Required for logo upload functionality in Settings > Branding
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token-here
